# =============================================================================
# LINUX-SPECIFIC ALIASES - For Arch Linux and other Linux distros
# =============================================================================

# Arch Linux package management
alias y="yay"
alias ys="yay -S"
alias arch-drop-caches='sudo paccache -rk3; yay -Sc --aur --noconfirm'
alias arch_update_all='export TMPFILE="$(mktemp)"; \
    sudo true; \
    rate-mirrors --save=$TMPFILE arch --max-delay=21600 \
      && sudo mv /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist-backup \
      && sudo mv $TMPFILE /etc/pacman.d/mirrorlist \
      && arch-drop-caches \
      && yay -Syyu --noconfirm'

# Audio and system utilities
alias playback="arecord -f cd - | aplay -"

# Clipboard management (Linux)
alias setclip="xclip -selection c"
alias getclip="xclip -selection c -o" 

